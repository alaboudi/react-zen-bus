{
  "repository": {
    "type": "git",
    "url": "https://github.com/alaboudi/react-zen-bus"
  },
  "keywords": [
    "@zenstack/zen-bus",
    "zen bus",
    "react",
    "binding"
  ],
  "version": "0.1.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "@zenstack/zen-bus": "^0.3.0",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@zenstack/react-zen-bus",
  "author": "Yazan Alaboudi",
  "module": "dist/react-zen-bus.esm.js",
  "size-limit": [
    {
      "path": "dist/react-zen-bus.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-zen-bus.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.2",
    "@testing-library/react-hooks": "^5.0.3",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@zenstack/zen-bus": "^0.3.0",
    "husky": "^5.0.9",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "size-limit": "^4.9.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  }
}
